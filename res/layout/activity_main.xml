<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FD8D8"
    tools:context=".MainActivity" >
    
    			
		<ImageView
    	    android:id="@+id/settings_gear"
    	    android:layout_width="50dp"
    	    android:layout_height="50dp"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="10dp"
    	    android:background="@drawable/settings_gear" />
  
    	<LinearLayout
		    android:id="@+id/sidebuttons"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_alignParentRight="true"
		    android:layout_marginLeft="20dp"
		    android:layout_marginTop="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginBottom="10dp"
    	    android:layout_above="@+id/randomview1"
		    android:weightSum="7"
		    android:orientation="vertical" >

			<ImageView
				android:id="@+id/remote_control"
				android:layout_width="wrap_content"
				android:minWidth="160dp"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginBottom="7dp"
				android:background="@drawable/sidebutton1" />
			<ImageView 
				android:id="@+id/data_log"
				android:layout_width="wrap_content"
				android:minWidth="160dp"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginBottom="7dp"
				android:background="@drawable/sidebutton2" />
			<ImageView
				android:id="@+id/calibration"
				android:layout_width="wrap_content"
				android:minWidth="160dp"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginBottom="7dp"
				android:background="@drawable/sidebutton3" />
			<ImageView
				android:id="@+id/programming"
				android:layout_width="wrap_content"
				android:minWidth="160dp"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:layout_marginBottom="7dp"
				android:background="@drawable/sidebutton4" />
			<ImageView
				android:id="@+id/profile"
				android:layout_width="wrap_content"
				android:minWidth="160dp"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:background="@drawable/sidebutton5" />

		</LinearLayout>

    	<LinearLayout
    	    android:id="@+id/screen_green"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignTop="@id/sidebuttons"
    	    android:layout_toLeftOf="@id/sidebuttons"
    	    android:layout_above="@id/randomview1"
    	    android:layout_marginLeft="10dp"
		    android:layout_marginBottom="10dp"
    	    android:orientation="vertical"
    	    android:weightSum="7" >
    	
    	    <TextView
				android:id="@+id/userName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/teamName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/teamNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/grade"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/schoolName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/teacherName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<ImageView
				android:id="@+id/targetimage"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_gravity="center"/>
    	</LinearLayout>
    	
    	<LinearLayout
    	    android:id="@+id/test"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignTop="@id/screen_green"
    	    android:layout_alignBottom="@id/screen_green"
    	    android:layout_alignRight="@id/screen_green"
    	    android:layout_alignLeft="@id/screen_green"
    	    android:orientation="vertical"
    	    android:gravity="bottom"
    	    android:weightSum="7">
    	    
    	        <View 
    	    	    android:id="@+id/randomview3"
    	    	    android:layout_width="0dp"
    	    	    android:layout_height="0dp" 
    	    	    android:layout_weight="5" />
    	    	
    	    	<LinearLayout
    	    	    android:id="@+id/works"
    	    		android:layout_width="wrap_content"
    	    		android:layout_height="0dp"
    	    		android:layout_weight="1.6"
    	    		android:adjustViewBounds="true"
    	    		android:layout_gravity="center"
    	    		android:orientation="horizontal">
    	    		
    	    	    <ImageView
    	    	        android:id="@+id/orangebutton"
    	    	        android:layout_width="wrap_content"
    	    	        android:layout_height="wrap_content"
    	    	        android:background="@drawable/orangebutton" />
    	    	    
    	    	    <ImageView
    	    	        android:id="@+id/graybutton"
    	    	        android:layout_width="wrap_content"
    	    	        android:layout_height="wrap_content"
    	    	        android:layout_marginLeft="10dp"
    	    	        android:background="@drawable/graybutton" />
    	    	
    	    	</LinearLayout>
    	    	
    	    	<View 
    	    	    android:id="@+id/randomview2"
    	    	    android:layout_width="0dp"
    	    	    android:layout_height="0dp" 
    	    	    android:layout_weight="0" />
    	    	    
    	</LinearLayout>

    	<View 
    	    android:id="@id/randomview1"
    	    android:layout_width="0dp"
    	    android:layout_height="0dp"
    	    android:layout_alignParentBottom="true" />

</RelativeLayout>